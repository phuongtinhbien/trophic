  <title>Thêm đơn vị</title>

</head>
<body>
  
  <div class="container">
      <div class="d-flex justify-content-center">
          <h2 class="display-4 text-title" style="font-size: 36px;">Thêm đơn vị</h2>
          <a name="next"></a>
      </div>

  <div class="card">
      
      <form action="/donVi" method="POST" class="form-inline" role="form">
            <div class="d-flex flex-column">
            <div class="p-2">
          <div class="form-group">
              <label for="name" class="mr-2">Tên đơn vị </label>
              <input type="text" class="form-control" id="name" name="name" placeholder="gram, kilogram">
          </div>
          </div>
          <div class="p-2">
          <div class="form-group">
                <label  for="key" class="mr-2">Mã đơn vị </label><br>
                <input type="text" class="form-control" id="key" name="key" placeholder="mã đơn vị">
            </div>
            </div>
            <div class="p-2">
            <div class="form-group">
                    <label for="key" class="mr-4">Kí hiệu </label><br>
                    <input type="text" class="form-control" id="kiHieu" name="kiHieu" placeholder="g, kg, IU">
                </div>
                </div>
                <div class="p-2">
          <input type="submit" class="btn btn-success" value="Thêm vào CSDL">
          </div>
          </div>
      </form>
      
  </div>
  </div>


