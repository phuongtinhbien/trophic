<% var a= ["chất béo","bột đường","vitamin và KC","chất đạm"]%>

            <div class="card" style="min-width:12rem;max-width: 19rem;border-radius:25px; box-shadow: 0px 0px 10px rgba(0, 0, 0, .15)">
                    
                <img class="card-img-top" style="margin:auto;border-radius:25px;  object-fit: contain;height:150px" src="/food_img/<%-anh%>" alt="Card image cap">
                    
                <div class="card-body">
                      <h5 class="card-title" style="text-transform:uppercase"><%-name%></h5>
                      <p class="card-text"style="text-align: justify;text-overflow: ellipsis;overflow: hidden;
                      white-space: nowrap;"><%-info%></p>
                      
                      
                      <div class="row text-center">
                          <div class="col mt-1">
                                <span class=" btn btn-outline-success disabled" ><b>Kcal: <%-calo%></b></span>
                          </div>
                          <div class="col mt-1">

                                <% if (loaiThucPham==="chatBeo"){%>
                                    <span class=" btn btn-outline-warning disabled" > <%-a[0]%></span>
                                    <%}%>
                                    <% if (loaiThucPham==="chatBotDuong"){%>
                                        <span class=" btn btn-outline-warning disabled" >  <%-a[1]%></span>
                                    <%}%>
                                    <% if (loaiThucPham==="vitamin&kc"){%>
                                        <span class=" btn btn-outline-warning disabled" >   <%-a[2]%></span>
                                     <%}%>
                                    <% if (loaiThucPham==="chatDam"){%>
                                        <span class="btn btn-outline-warning disabled" > <%-a[3]%></span>
                                    <%}%>
                            
                          </div>

                          
                        </div>
                      </div>
                      <a class="btn btn-success w-100 p-3" href="/food/<%-_id%>" style="border-radius: 0px 0px 25px 25px">Chi  tiết
                      </a>
                  </div>